                <!-- <label for="furnitureName" class="form-label">Name: </label> -->
                <!-- <label for="name" class="form-label">Name: </label> -->
                <input type="text" class="form-control" name="blogContent" id="blogContent" placeholder="Name of Blog" required>
                <!-- <input type="text" class="form-control" name="furnitureName" id="furnitureName" placeholder="Name of Furniture" required> -->
                <!-- <input type="text" class="form-control" name="name" id="name" placeholder="Name of Furniture" required> -->
                <div class="valid-feedback">
